# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

def shared_pods
  use_frameworks!
  
  pod 'PKHUD'
  pod 'Alamofire', '4.9'
  pod 'AlamofireObjectMapper'
  pod 'ObjectMapper'
  pod 'Kingfisher'
  
end

target 'DKBCode' do
    shared_pods
end

target 'DKBCodeUnitTests' do
    shared_pods
end

target 'DKBCodeUITests' do
    shared_pods
end